<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout_purchase_histroy"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvPurchaseHistoryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="@string/labelTextViewPurchaseHitory"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/tc_textView_cart_header_black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.25"
            android:text="@string/labelTextViewOrderNumberHeader"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tc_textView_cart_header_dark_grey" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:text="@string/labelTextViewDateHeader"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tc_textView_cart_header_dark_grey" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.5"
            android:text="@string/labelTextViewTotalHeader"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tc_textView_cart_header_dark_grey" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.75"
            android:text="@string/labelTextViewStatusHeader"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tc_textView_cart_header_dark_grey" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvPurchaseHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:divider="@drawable/drawable_border_dashed"
        android:dividerHeight="2dp" >
    </ListView>

</LinearLayout>