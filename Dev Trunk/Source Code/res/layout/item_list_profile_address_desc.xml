<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="5dp"
    android:background="@color/bg_layout_address"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvAddressLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:lines="3"
        android:maxLines="3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/tc_listview_product_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btEditAddress"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="@drawable/selector_button_remove"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="@string/buttonAddressEdit"
            android:textColor="@color/tc_textview_cart_item_name_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btRemoveAddress"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:background="@drawable/selector_button_remove"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="@string/buttonAddressRemove"
            android:textColor="@color/tc_textview_cart_item_name_white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>