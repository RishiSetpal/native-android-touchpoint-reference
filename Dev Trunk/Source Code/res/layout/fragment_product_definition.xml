<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutFragmentProducListing" >

    <LinearLayout style="@style/LayoutFragmentProducDetails" >

        <com.optimusinfo.elasticpath.cortex.common.EPImageView
            android:id="@+id/ivProductListing"
            style="@style/ImageViewProductListing" />

        <TextView
            android:id="@+id/tvProductListingTitle"
            style="@style/TextViewProductListingName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp" >

            <TextView
                android:id="@+id/tvProductListingPrice"
                style="@style/TextViewProductListingPrice" />

            <TextView
                android:id="@+id/tvProductListingAvailable"
                style="@style/TextViewProductListingAvailable" />
        </LinearLayout>

        <Button
            android:id="@+id/btAddToCart"
            style="@style/ButtonProductListingAvailable" />
    </LinearLayout>

</RelativeLayout>