<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:gravity="center"
    android:padding="0dp" >

    <LinearLayout
        android:id="@+id/llAddressDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@color/bg_layout_address"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tvAddressLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:lines="3"
            android:maxLines="4"
            android:textColor="@color/tc_listview_product_desc"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rbUseForShipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:button="@drawable/eptheme_btn_radio_holo_light"
            android:text="@string/labelRadioButtonUseForShipping"
            android:textColor="@color/tc_listview_product_desc"
            android:textSize="12sp"
            android:textStyle="bold" >
        </RadioButton>

        <RadioButton
            android:id="@+id/rbUseForBilling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:button="@drawable/eptheme_btn_radio_holo_light"
            android:text="@string/labelRadioButtonUseForBilling"
            android:textColor="@color/tc_listview_product_desc"
            android:textSize="12sp"
            android:textStyle="bold" >
        </RadioButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNoAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/layout_bg_border_blue_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="1dp"
        android:visibility="invisible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/labelTextViewAddNewAddress"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/tc_listview_product_blue" />
    </LinearLayout>

</RelativeLayout>