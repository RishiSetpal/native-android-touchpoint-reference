<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg_layout_address"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tvAddressLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:lines="3"
        android:maxLines="4"
        android:textColor="@color/tc_listview_product_desc"
        android:textSize="13sp" />

    <RadioButton
        android:id="@+id/rbUseForShipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:text="@string/labelRadioButtonUseForShipping"
        android:textColor="@color/tc_listview_product_desc"
        android:textSize="12sp"
        android:textStyle="bold" >
    </RadioButton>

    <RadioButton
        android:id="@+id/rbUseForBilling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:button="@drawable/apptheme_btn_radio_holo_light"
        android:text="@string/labelRadioButtonUseForBilling"
        android:textColor="@color/tc_listview_product_desc"
        android:textSize="12sp"
        android:textStyle="bold" >
    </RadioButton>

</LinearLayout>